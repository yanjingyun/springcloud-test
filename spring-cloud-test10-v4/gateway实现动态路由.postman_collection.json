				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"id\": \"service-hi\",\r\n    \"predicates\": [\r\n        {\r\n            \"name\": \"Path\",\r\n            \"args\": {\r\n                \"_genkey_0\": \"/demo2222/**\"\r\n            }\r\n        }\r\n    ],\r\n    \"filters\": [\r\n        {\r\n            \"name\": \"StripPrefix\",\r\n            \"args\": {\r\n                \"_genkey_0\": \"1\"\r\n            }\r\n        },\r\n        {\r\n            \"name\": \"Hystrix\",\r\n            \"args\": {\r\n                \"name\": \"default\",\r\n                \"fallbackUri\": \"forward:/defaultfallback\"\r\n            }\r\n        },\r\n        {\r\n            \"name\": \"RequestRateLimiter\",\r\n            \"args\": {\r\n                \"redis-rate-limiter.replenishRate\": \"1\",\r\n                \"redis-rate-limiter.burstCapacity\": \"2\",\r\n                \"key-resolver\": \"#{@apiKeyResolver}\"\r\n            }\r\n        }\r\n    ],\r\n    \"uri\": \"lb://SERVICE-HI\",\r\n    \"order\": 0\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
